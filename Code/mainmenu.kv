<mainmenu>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: ".\img\mainback.jpg"
                size: self.size
                pos: self.pos

        Image:
            source: ".\img\game element\gamelogo.png"  # รูปภาพอื่น (เช่นโลโก้)
            size_hint: 0.4, 0.4  # ขนาดโลโก้
            pos_hint: {"center_x": 0.5, "center_y": 0.7}  # ตำแหน่งโลโก้


        Button:
            id: Start_Button
            text: "Start Game"
            font_name : '.\img\game element\CARDOT-Semibold.otf'
            font_size: self.height*0.06
            size_hint: 0.3, 0.5
            pos_hint: {"center_x": 0.5, "y": 0.1}
            background_normal: ".\img\game element\startbutton.png"  # รูปพื้นหลังเมื่อปกติ
            color: (0.1647, 0.2392, 0.4, 1)
            on_press: app.openbirdgame()

        Label:
            text: "Press to select skins"
            font_name: '.\img\game element\CARDOT-Semibold.otf'
            font_size: '20sp'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {"center_x": 0.5, "y": 0.25}  # อยู่ต่ำกว่าปุ่มเล็กน้อย
            color: (1, 1, 1, 1)  # สีข้อความ (สีขาว)

        Button:
            id: Stop Music
            size_hint: None, None
            size: 100, 100
            pos_hint: {"center_x": 0.45, "y": 0.1}
            background_normal: ".\img\game element\stopmusicicon.png"
            on_press: root.stop_music()  # เรียกฟังก์ชัน stop_music จาก mainmenu

        Button:
            id: Play Music
            size_hint: None, None
            size: 95, 95
            pos_hint: {"center_x": 0.55, "y": 0.1}
            background_normal: ".\img\game element\playmusicicon.png"
            on_press: root.play_music()  # เรียกฟังก์ชัน play_music จาก mainmenu