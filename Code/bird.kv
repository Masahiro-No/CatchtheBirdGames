<Bird>:
    size_hint: (None, None)
    size: (100, 100)  # ขนาดตัวละคร
    pos: (200, 300)  # ตำแหน่งเริ่มต้น

<skinmenu> :
    FloatLayout:  # ใช้ FloatLayout สำหรับควบคุมการจัดตำแหน่งทั้งหมด
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # สีพื้นหลังเป็นสีขาว (เพื่อความชัดเจน)
            Rectangle:
                source: "./img/skinback.jpg"  # รูปภาพพื้นหลัง
                size: root.width, root.height  # ครอบคลุมหน้าจอทั้งหมด
                pos: 0, 0  # เริ่มที่มุมซ้ายล่าง

        # กลุ่มปุ่มด้านบน
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.2, 0.5
            pos_hint: {"x": 0.05, "center_y": 0.75}  # ด้านซ้ายบน
            Image:
                source: "./img/character_skin/MinaBirduse.png"
                size_hint: 1, 1
            Button:
                id: select_mina
                text: "Mina Bird"
                font_name: '.\img\game element\CARDOT-Semibold.otf'
                font_size: self.height * 0.13
                size_hint: 1, 0.6
                background_normal: ".\img\game element\startbutton.png"
                color: (0.1647, 0.2392, 0.4, 1)
                on_press: app.mina_skin()

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.2, 0.5
            pos_hint: {"center_x": 0.5, "center_y": 0.75}  # ด้านบนกลาง
            Image:
                source: "./img/character_skin/SvBirduse.png"
                size_hint: 1, 1
            Button:
                id: select_sw
                text: "Silver Wolf Bird"
                font_name: '.\img\game element\CARDOT-Semibold.otf'
                font_size: self.height * 0.13
                size_hint: 1, 0.6
                background_normal: ".\img\game element\startbutton.png"
                color: (0.1647, 0.2392, 0.4, 1)
                on_press: app.sw_skin()

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.2, 0.5
            pos_hint: {"x": 0.75, "center_y": 0.75}  # ด้านขวาบน
            Image:
                source: "./img/character_skin/DanhengBirduse.png"
                size_hint: 1, 1
            Button:
                id: select_danheng
                text: "Dan Heng Bird"
                font_name: '.\img\game element\CARDOT-Semibold.otf'
                font_size: self.height * 0.13
                size_hint: 1, 0.6
                background_normal: ".\img\game element\startbutton.png"
                color: (0.1647, 0.2392, 0.4, 1)
                on_press: app.danheng_skin()

        # กลุ่มปุ่มด้านล่าง
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.2, 0.5
            pos_hint: {"x": 0.05, "center_y": 0.25}  # ด้านซ้ายล่าง
            Image:
                source: "./img/character_skin/Stelleuse.png"
                size_hint: 1, 1
            Button:
                id: select_stelle
                text: "Stelle Bird"
                font_name: '.\img\game element\CARDOT-Semibold.otf'
                font_size: self.height * 0.13
                size_hint: 1, 0.6
                background_normal: ".\img\game element\startbutton.png"
                color: (0.1647, 0.2392, 0.4, 1)
                on_press: app.stelle_skin()

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.2, 0.5
            pos_hint: {"center_x": 0.5, "center_y": 0.25}  # ด้านล่างกลาง
            Image:
                source: "./img/character_skin/Himekouse.png"
                size_hint: 1, 1
            Button:
                id: select_himeko
                text: "Himeko Bird"
                font_name: '.\img\game element\CARDOT-Semibold.otf'
                font_size: self.height * 0.13
                size_hint: 1, 0.6
                background_normal: ".\img\game element\startbutton.png"
                color: (0.1647, 0.2392, 0.4, 1)
                on_press: app.himeko_skin()

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.2, 0.5
            pos_hint: {"x": 0.75, "center_y": 0.25}  # ด้านขวาล่าง
            Image:
                source: "./img/character_skin/Robinuse.png"
                size_hint: 1, 1
            Button:
                id: select_robin
                text: "Robin Bird"
                font_name: '.\img\game element\CARDOT-Semibold.otf'
                font_size: self.height * 0.13
                size_hint: 1, 0.6
                background_normal: ".\img\game element\startbutton.png"
                color: (0.1647, 0.2392, 0.4, 1)
                on_press: app.robin_skin()

<GameScreen>:
    bird_mina: bird_mina
    bird_sw: bird_sw
    bird_danheng: bird_danheng
    bird_stelle: bird_stelle
    bird_himeko: bird_himeko
    bird_robin: bird_robin

    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # สีพื้นหลังเป็นสีขาว (เพื่อความชัดเจน)
            Rectangle:
                source: "./img/gameback.jpg"  # รูปภาพพื้นหลัง
                size: root.width, root.height  # ครอบคลุมหน้าจอทั้งหมด
                pos: 0, 0  # เริ่มที่มุมซ้ายล่าง

        # เพิ่ม Label สำหรับ Game Over
        Label:
            id: game_over_label
            text: "GAME OVER"
            font_size: '50sp'
            font_name: '.\img\game element\CARDOT-Semibold.otf'
            color: 1, 0, 0, 1  # สีแดง
            bold: True
            size_hint: None, None
            size: 300, 100
            opacity: 0  # ซ่อน Label โดยตั้งค่า opacity เป็น 0

        Button:
            id: restart_button
            text: "Restart"
            font_size: '20sp'
            font_name: '.\img\game element\CARDOT-Semibold.otf'
            size_hint: None, None
            size: 200, 50
            opacity: 0  # ซ่อนปุ่มจนกว่าเกมจะจบ
            on_press: root.restart_game()

        Button: #เห็นตอนเปิดหน้าจอเต็มเท่านั้น
            id: Stop Music
            size_hint: None, None
            size: 100, 100
            pos_hint: {"center_x": 17.5, "y": 9}
            background_normal: ".\img\game element\stopmusicicon.png"
            on_press: root.stop_music()  # เรียกฟังก์ชัน stop_music จาก GameScreen

        Button: #เห็นตอนเปิดหน้าจอเต็มเท่านั้น
            id: Play Music
            size_hint: None, None
            size: 95, 95
            pos_hint: {"center_x": 18.5, "y": 9.025}
            background_normal: ".\img\game element\playmusicicon.png"
            on_press: root.play_music()  # เรียกฟังก์ชัน play_music จาก GameScreen

    Bird:
        id: bird_mina
        source: './img/character_skin/MinaBirduse.png'  # รูปภาพตัวละคร

    Bird:
        id: bird_sw
        source: './img/character_skin/SvBirduse.png'  # รูปภาพตัวละคร

    Bird:
        id: bird_danheng
        source: './img/character_skin/DanhengBirduse.png'  # รูปภาพตัวละคร

    Bird:
        id: bird_stelle
        source: './img/character_skin/Stelleuse.png'  # รูปภาพตัวละคร

    Bird:
        id: bird_himeko
        source: './img/character_skin/Himekouse.png'  # รูปภาพตัวละคร

    Bird:
        id: bird_robin
        source: './img/character_skin/Robinuse.png'  # รูปภาพตัวละคร
